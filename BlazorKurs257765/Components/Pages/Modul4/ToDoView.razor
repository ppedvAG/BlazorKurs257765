@page "/todo"
@inject ToDoVM VM
<h3>ToDoView</h3>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">
                <input type="text" class="form-control" @bind="Eingabe"
                       placeholder="suchbegriff">
                <button class="btn btn-outline-secondary" type="button" ><i class="bi bi-search"></i> search</button>
            </div>
        </div>
    </div>

    <div class="row">
       
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Todos</li>
                @foreach (var item in VM.toDos.todos.Where(x=>x.todo.Contains(Eingabe,StringComparison.CurrentCultureIgnoreCase)))
                {
                    <li class='list-group-item @(item.completed ? "list-group-item-dark" : "")'  >
                      @item.todo
                    </li>
                }
               

            </ul>
        </div>
    </div>

</div>

@code {
    string Eingabe="";
}
