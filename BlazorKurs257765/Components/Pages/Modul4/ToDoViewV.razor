@page "/todoV"
@inject ToDoVM VM
<h3>ToDoView</h3>

<div class="container">
 

    <div class="row">

        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Todos</li>
               
                <Virtualize Items="VM.toDos.todos" Context="item" OverscanCount="5" ItemSize="34">
                    <ItemContent>
                        <li class='list-group-item @(item.completed ? "list-group-item-dark" : "")'>
                            @item.todo
                        </li>
                    </ItemContent>
                    <EmptyContent>
                        <li class="list-group-item">Keine Einträge vorhanden</li>
                    </EmptyContent>
                </Virtualize>

            </ul>
        </div>
    </div>

</div>

