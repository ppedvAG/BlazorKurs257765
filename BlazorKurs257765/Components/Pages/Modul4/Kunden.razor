
@page "/kunden"
@using BlazorKurs257765.Models
@inject NorthwindContext db
<h3>Kunden</h3>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">
                <input type="text" class="form-control" @bind="Eingabe"
                       placeholder="suchbegriff">
                <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i> search</button>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Kunden</li>
                @foreach (var item in db.Customers.Where(x => x.CompanyName.Contains(Eingabe)))
                {
                    <li class='list-group-item '>
                        @item.CompanyName
                    </li>
                }


            </ul>
        </div>
    </div>

</div>

@code {
    string Eingabe = "";
}
